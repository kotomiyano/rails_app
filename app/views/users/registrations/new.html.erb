<div class="signup">
  <h2>アカウント作成</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field">
      <%#<%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, placeholder:"メールアドレス" %>
    </div>

    <div class="field">
      <%#<%= f.label :password %>
      <% if @minimum_password_length %>
      <% end %><br />
      <%= f.password_field :password, placeholder:"新規パスワード(6文字以下)" %>
    </div>

    <div class="field">
      <%#<%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, placeholder:"パスワード確認" %>
    </div>

    <div class="field">
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>

    <div class="actions">
      <%= f.submit "アカウント作成" %>
    </div>
    <div class="sub">
      <%= render "users/shared/links" %>
    </div>
  <% end %>
</div>
